<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="13"
    android:versionName="1.2.2"
    package="com.egingell.untoaster" >
    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />
	<uses-permission 
	    android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<application
        android:allowBackup="true"
        android:icon="@drawable/toaster"
        android:label="@string/app_name" >
        <meta-data android:name="xposedmodule" android:value="true"/>
        <meta-data android:name="xposedminversion" android:value="2.0*"/>
        <meta-data android:name="xposeddescription" android:value="Selectively block Toast notifications."/>
        <activity
            android:label="@string/app_name"
            android:name=".activities.Welcome" >
            <intent-filter >
                <!-- <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activities.EditActivity">
            <intent-filter> 
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- <action android:name="com.egingell.untoaster.activities.EditActivity" />  
         		<category android:name="android.intent.category.DEFAULT" />  -->
     		</intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activities.AppsActivity">
            <intent-filter> 
       			<action android:name="com.egingell.untoaster.activities.AppsActivity" />  
         		<category android:name="android.intent.category.DEFAULT" />  
     		</intent-filter>
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".activities.LogsActivity">
            <intent-filter> 
       			<action android:name="com.egingell.untoaster.activities.LogsActivity" />  
         		<category android:name="android.intent.category.DEFAULT" />  
     		</intent-filter>
        </activity>
    </application>
</manifest>
